a = [1,2,3,7,6,4,8]

Ascending
for i in range(len(a)-1):
    for j in range((len(a)-1-i)):
        if a[j] > a[j+1]:
            a[j], a[j+1] = a[j+1], a[j]

print(a)
                   
Descending
for i in range(len(a)-1):
    for j in range((len(a)-1-i)):
        if a[j] < a[j+1]:
            a[j], a[j+1] = a[j+1], a[j]

print(a)           
